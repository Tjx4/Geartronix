<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/page_background_portrait</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_portrait</item>
    </style>


    <style name="messageImageAttachement">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:scaleType">fitStart</item>
        <item name="android:background">@color/colorTransparentBlack</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="geartronixLabel">
        <item name="android:layout_marginTop">10dp</item>

        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textWhite</item>
    </style>

    <style name="mediumLabel" parent="geartronixLabel">
        <item name="android:textSize">@dimen/medium_font_size</item>
    </style>

    <style name="mediumLabelPlus" parent="geartronixLabel">
        <item name="android:textSize">@dimen/medium_plus_font_size</item>
    </style>

    <style name="moreDialogLbalel" parent="mediumLabelPlus">
        <item name="android:textColor">@color/textBlack</item>
    </style>

    <style name="moreDialogIcon">
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>
    <style name="moreDialogContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="profileBarInfo1" parent="geartronixLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="profileBarInfo2" parent="profileBarInfo1">
        <item name="android:textColor">@color/textWhite</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="profileBarContainer">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">110dp</item>
    </style>

    <style name="profileBarSubContainer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="largeLabel" parent="geartronixLabel">
        <item name="android:textSize">@dimen/large_font_size</item>
    </style>

    <style name="profileDividerLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/testGreen</item>
    </style>
    <style name="profileLabel2" parent="geartronixLabel">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">26dp</item>
        <item name="android:layout_marginTop">26dp</item>
        <item name="android:textColor">@color/textWhite</item>
        <item name="android:textSize">16dp</item>
    </style>
    <style name="profileLabel1" parent="geartronixLabel">
        <item name="android:textSize">@dimen/medium_plus_font_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingLeft">@dimen/profLabelPadding</item>
        <item name="android:paddingRight">@dimen/profLabelPadding</item>
        <item name="android:textColor">@color/textWhite</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="profileLabel1Count" parent="profileLabel1">
        <item name="android:textColor">#0088cc</item>
        <item name="android:textSize">@dimen/xlarge_font_size</item>
    </style>

    <style name="profUnderLiner" parent="mediumLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:layout_marginTop">9dp</item>
        <item name="android:background">#777777</item>
    </style>

    <style name="forgotPasswordLabel" parent="mediumLabel">
        <item name="android:textColor">#cccccc</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="geartronixTextBox">
        <item name="android:layout_marginTop">10dp</item>

        <item name="android:paddingLeft">@dimen/medium_textBox_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/medium_textBox_horizontal_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/geartronix_textbox_background</item>
    </style>

    <style name="gtxRadioBtn" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@color/textWhite</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:stepSize">@dimen/medium_plus_font_size</item>
    </style>
    <style name="mediumTextBox" parent="geartronixTextBox">
        <item name="android:layout_height">@dimen/medium_textbox_height</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:inputType">text</item>
    </style>
    <style name="viewOverlay">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/overlayViewColor</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="profileEditorTextBox" parent="mediumTextBox">
        <item name="android:layout_height">30dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="geartronixButton">
        <item name="android:layout_marginTop">20dp</item>

        <item name="android:paddingLeft">@dimen/medium_button_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/medium_button_horizontal_padding</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/geartronix_button_background</item>
        <item name="android:textColor">@color/textWhite</item>
    </style>

    <style name="mediumButton" parent="geartronixButton">
        <item name="android:layout_height">@dimen/medium_button_height</item>
    </style>

    <style name="loadingScreen">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="loadingSpinner" parent="android:Widget.Holo.ProgressBar">
        <item name="android:textColorPrimary">@color/colorTransparent</item>
        <item name="android:textColor">#daac56</item>
        <item name="android:background">@color/colorTransparent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AlertDialogCustom" parent="@android:style/Theme.Dialog">
        <item name="android:textColor">#dddddd</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">17sp</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:color">#cccccc</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.za.geartronix.activities.GalleryActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<!-- Todo: Add decoy row for slide under effect -->

        <GridView
            android:id="@+id/grdvImageContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:columnWidth="130dp"
            android:horizontalSpacing="0dp"
            android:numColumns="auto_fit"
            android:stretchMode="columnWidth"
            android:verticalSpacing="0dp"/>

        <include layout="@layout/full_screen_image_view"
                 android:id="@+id/imgLargeContainer"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"/>

    </RelativeLayout>

    <include
        android:id="@+id/frmLoadingScreen"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        layout="@layout/loading_screen"
        android:visibility="invisible"/>

</RelativeLayout>
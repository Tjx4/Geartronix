<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:visibility="gone"
             android:animateLayoutChanges="true"
             android:clickable="true"
             android:layout_gravity="center"
             android:background="@color/colorTransparentBlack"
             xmlns:app="http://schemas.android.com/apk/res-auto">

    <co.za.geartronix.customViews.CustomImageVIew
        android:id="@+id/imgLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="matrix"
        android:layout_gravity="center"
        app:srcCompat="@mipmap/gallery_icon"/>

    <FrameLayout
        android:id="@+id/frmContrlMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:animateLayoutChanges="true"
        android:background="@color/colorTransparentBlack">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imgBtnShare"
                android:layout_width="@dimen/gallery_controll_icon_size"
                android:layout_height="@dimen/gallery_controll_icon_size"
                android:background="@color/colorTransparent"
                android:onClick="onViewClickedEvent"
                android:scaleType="fitXY"
                app:srcCompat="@android:drawable/ic_menu_share"/>

            <ImageButton
                android:id="@+id/imgBtnSavePic"
                android:layout_width="@dimen/gallery_controll_icon_size"
                android:layout_height="@dimen/gallery_controll_icon_size"
                android:layout_marginLeft="@dimen/gallery_control_icon_spacing"
                android:background="@android:color/transparent"
                android:onClick="onViewClickedEvent"
                android:scaleType="fitXY"
                app:srcCompat="@android:drawable/ic_menu_save"/>

            <ImageButton
                android:id="@+id/imgMinimize"
                android:layout_width="@dimen/gallery_controll_icon_size"
                android:layout_height="@dimen/gallery_controll_icon_size"
                android:layout_marginLeft="@dimen/gallery_control_icon_spacing"
                android:background="@drawable/minimize_icon"
                android:onClick="onViewClickedEvent"
                android:scaleType="fitXY"
                />

        </LinearLayout>

    </FrameLayout>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/frmLoginBottom">

        <ScrollView
            android:id="@+id/scrLogin"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                android:padding="20dp"
                tools:context="co.za.geartronix.activities.LoginActivity">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="80dp"
                    app:srcCompat="@drawable/logo"/>

                <TextView
                    style="@style/mediumLabel"
                    android:text="@string/username"/>

                <EditText
                    android:id="@+id/txtUsername"
                    android:hint="@string/enter_email_or_cell"
                    style="@style/mediumTextBox"/>

                <TextView
                    style="@style/mediumLabel"
                    android:text="@string/password"/>

                <EditText
                    android:id="@+id/txtPassword"
                    android:inputType="textWebPassword"
                    android:hint="@string/password"
                    style="@style/mediumTextBox"/>

                <Button
                    android:id="@+id/btnLogin"
                    style="@style/mediumButton"
                    android:layout_width="match_parent"
                    android:layout_marginTop="30dp"
                    android:onClick="onViewClickedEvent"
                    android:text="@string/sign_in"/>

                <TextView
                    android:id="@+id/txtForgotPassword"
                    style="@style/forgotPasswordLabel"
                    android:onClick="onViewClickedEvent"
                    android:text="@string/forgot_password"
                    android:textAlignment="center"/>

            </LinearLayout>

        </ScrollView>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/frmLoginBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/login_bottom_background">

        <TextView   style="@style/mediumLabel"
                    android:id="@+id/btnRegister"
                    android:text="@string/create_a_new_account"
                    android:layout_width="match_parent"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:textAlignment="center"
                    android:onClick="onViewClickedEvent"/>
    </FrameLayout>

    <include
        android:id="@+id/frmLoadingScreen"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        layout="@layout/loading_screen"
        android:visibility="gone"/>

</RelativeLayout>
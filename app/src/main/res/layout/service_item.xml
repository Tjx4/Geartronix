<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="5dp">


    <FrameLayout android:id="@+id/imgArrowContainer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#222222"
        android:layout_marginRight="16dp"
        android:layout_alignParentLeft="true">

        <ImageView
            android:id="@+id/imgArrow"
            android:layout_gravity="center"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:scaleType="center"
            app:srcCompat="@android:drawable/ic_media_next"/>

    </FrameLayout>
    <LinearLayout
        android:layout_toRightOf="@id/imgArrowContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtService"
            style="@style/largeLabel"
            android:text="Service"/>

        <TextView
            android:id="@+id/txtDescription"
            style="@style/mediumLabel"
            android:text="Service description service description service description  service description  service description service description..."/>

    </LinearLayout>

</RelativeLayout>
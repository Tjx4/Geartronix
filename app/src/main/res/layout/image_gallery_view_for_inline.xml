<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="@dimen/gallery_image_width">

    <ImageView
        android:id="@+id/imgTheImage"
        android:layout_width="@dimen/gallery_image_width"
        android:layout_height="@dimen/gallery_image_height"
        android:background="?android:attr/colorMultiSelectHighlight"
        android:src="@android:drawable/ic_lock_lock"
        android:layout_alignParentLeft="true"/>

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="@dimen/gallery_image_width"
                    android:padding="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"
                    android:layout_toRightOf="@+id/imgTheImage"
                    android:layout_toEndOf="@+id/imgTheImage">

        <TextView
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/transBlack"
            android:text="TextView"
            android:textAlignment="center"
            android:padding="3dp"
            android:textStyle="bold"
            android:textColor="@color/textWhite"/>

        <TextView
            android:id="@+id/txtDescription"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignBottom="@id/txtName"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/txtName"
            android:background="@color/transBlack"
            android:text="Description..."
            android:padding="5dp"
            android:textColor="@color/textWhite"/>

    </RelativeLayout>

</RelativeLayout>
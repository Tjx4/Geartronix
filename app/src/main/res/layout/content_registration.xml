<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/menuContenRegisterID"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:layout_width="match_parent"
                android:paddingTop="50dp"
                android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingBottom="20dp"
            android:paddingTop="10dp"
            android:layout_gravity="clip_vertical">

            <TextView
                style="@style/mediumLabel"
                android:visibility="gone"
                android:text="Enter your details"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:textColor="#cccccc"/>

            <TextView
                style="@style/mediumLabel"
                android:text="*First name"
                android:textColor="#cccccc"/>

            <EditText
                android:id="@+id/txtName"
                style="@style/mediumTextBox"
                android:hint="Enter your first name..."/>

            <TextView
                style="@style/mediumLabel"
                android:text="*Contact number"
                android:textColor="#cccccc"/>

            <EditText
                android:id="@+id/txtCell"
                android:inputType="phone"
                style="@style/mediumTextBox"
                android:hint="Enter contact number..."/>

            <TextView
                style="@style/mediumLabel"
                android:text="Email"
                android:textColor="#cccccc"/>

            <EditText
                android:id="@+id/txtEmail"
                style="@style/mediumTextBox"
                android:hint="Enter email..."/>

            <TextView android:visibility="gone"
                style="@style/mediumLabel"
                android:text="City"
                android:textColor="#cccccc"/>

            <EditText android:visibility="gone"
                android:id="@+id/txtCity"
                style="@style/mediumTextBox"
                android:hint="Enter city..."/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    style="@style/mediumLabel"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:text="*Gender"
                    android:textColor="#cccccc"/>

                <ImageView
                    android:id="@+id/imgGender"
                    android:layout_width="30dp"
                    android:layout_height="23dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="5dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/service_arrow"/>

                <RadioGroup
                    android:id="@+id/rdoGroupGender"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rdoFemale"
                        style="@style/gtxRadioBtn"
                        android:onClick="onViewClickedEvent"
                        android:text="Female"/>

                    <RadioButton
                        android:id="@+id/rdoMale"
                        style="@style/gtxRadioBtn"
                        android:layout_marginLeft="20dp"
                        android:onClick="onViewClickedEvent"
                        android:text="Male"/>

                </RadioGroup>

            </LinearLayout>


            <TextView
                style="@style/mediumLabel"
                android:text="*Create password"
                android:textColor="#cccccc"/>

            <EditText
                android:id="@+id/txtPassword"
                android:inputType="textPassword"
                style="@style/mediumTextBox"
                android:hint="Enter password..."/>

            <TextView
                style="@style/mediumLabel"
                android:text="*Confirm your password"
                android:textColor="#cccccc"/>

            <EditText
                android:id="@+id/txtConfirmPassword"
                android:inputType="textPassword"
                style="@style/mediumTextBox"
                android:hint="Confirm password..."/>

            <Button
                android:id="@+id/btnRegister"
                style="@style/mediumButton"
                android:layout_width="match_parent"
                android:layout_marginTop="40dp"
                android:onClick="onViewClickedEvent"
                android:text="@string/register"/>

        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/frmLoadingScreen"
        layout="@layout/loading_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:visibility="gone"/>

</RelativeLayout>